<h1>List of Games</h1>
<br>
<table border="1">
  <thead>
    <tr>
      <th>Game ID</th>
      <th colspan="3">Game Name</th>
    <tr>
  </thead>

  <tbody>
    <% @games.each do |g| %>
      <tr>
        <td><center><%= g.id %></center></td>
        <td><a href="game/<%=g.id%>"><%= g.game_name %></a></td>
        <td><form action="">
              <input type="submit" value="Edit"></td>
            </form>
        <td><form action="/delete_game/<%=g.id%>" method="post">
              <input type="submit" value="Delete"></td>
            </form>    
      </tr>
    <% end %>
  </tbody>
</table>
