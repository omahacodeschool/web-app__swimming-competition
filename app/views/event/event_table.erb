<center><h1>EVENTS</h1></center>

<center>
<table border="1">
  <thead>
    <tr>
      <th>Event</th>
      <th>Edit</th>
      <th>Delete</th>
      <th>Lock</th>
    </tr>
  </thead>

  <tbody>
    <% @info.each do |info| %>
      <tr>
        <td><a href="/event/<%= info.id %>"><%= info.event_name %></a></td>
        <td>
          <form action="/lock_event/<%= info.id %>" method="post">
          <button name="lock" type="submit" value=<%= true %>>Lock Event</button>
          </form> 
        </td>
        <td><a href="/edit_event_form/<%= info.id %>">Edit</a></td>
        <td><a href="/delete_event/<%= info.id %>">Delete</a></td>
        </tr>
    <% end %>
  </tbody>
</table>
</center>

