<center><h1> <%= @competitor.name %> </h1>

Age:&nbsp;<b><%= @competitor.age %></b> &emsp;|&emsp;
College:&nbsp;<b><%= @competitor.get_college_name %></b>&emsp;|&emsp;
Conference:&nbsp;<b><%= @competitor.get_conference_name %></b>
<br>
<br>
<br>
<table border="0">
  <thead>
    <tr>

      <th>Activity</th>
      <th>&emsp;&emsp;</th>
      <th>Status</th>
      <th>&emsp;&emsp;</th>
      <th>Score</th>
      <th>&emsp;&emsp;</th>
      <th>Max Possible Score</th>
    </tr>
  </thead>
  <tbody>
      <% @results.each do |r| %>
      <tr>
        <td><a href="/activities/activity/<%= r.activity_id %>"><%= r.get_activity_name %></a></td>
        <td>&emsp;&emsp;</td>
        <td><%= r.get_activity_locked_status %></td>
        <td>&emsp;&emsp;</td>
        <td><%= r.score %></td>
        <td>&emsp;&emsp;</td>
        <td>&emsp;<%= r.get_activity_max_score %></td>
      </tr>
      <% end %>
  </tbody>
</table>
</center>

<br>
<br>
<br>

<center>
<table border="0">
  <thead>
    <tr>
    <th><form method="GET" action="/competitors/competitor/<%= @competitor.id %>/add_score">
      <input type="submit" value="Add New Score">&emsp;</form></th>

    <th><form method="GET" action="/competitors/competitor/<%= @competitor.id %>/delete_score">
    <input type="submit" value="Delete Score">&emsp;</form></th>
    
    <th><form method="get" action="/competitors/competitor/<%= @competitor.id %>/update_competitor">
    <input type="submit" value="Update Competitor">&emsp;</form></th>
      
    <th><form method="POST" action="/competitors/competitor/<%= @competitor.id %>/delete_competitor/confirmation">
    <input type="submit" value="Delete Competitor">&emsp;</form></th>

    </tr>
  </thead>
  </table>
</center>