<h1><%= @competitor.first_name.capitalize + " " + @competitor.last_name.capitalize %></h1>

<p>
  School:
</p>

<ul>
  <li>
    <a href = "/view_school/<%= @competitor.id %>">
      <%= @competitor.school_name.capitalize %>
    </a>  
  </li>
</ul>

<p>
  Conference:
</p>

<ul>
  <li>
    <a href = "/view_conference/<%= @competitor.id %>">
      <%= @competitor.conference_name.capitalize %>
    </a>
  </li>
</ul>

<p>
  Events:
</p>

<% @competitor.results.each do |c| %>
<ul>
  <li>
    <a href = "/view_result/<%= @competitor.id %>">
      <%= c.event_name.capitalize %>
    </a>  
  </li>
</ul>    
<% end %>


