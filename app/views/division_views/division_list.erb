<h1>List of Divisions</h1>
<br>
<table border="1">
  <thead>
    <tr>
      <th>Divison ID</th>
      <th colspan="3">Division</th>
    </tr>
  </thead>

  <tbody>
    <% @divisions.each do |d| %>
      <tr>
        <td><center><%= d.id %></center></td>
        <td><a href="/division/<%=d.id%>"><%= d.division %></a></td>
        <td><form action="">
              <input type="submit" value="Edit"></td>
            </form>
        <td><form action="/delete_division/<%d.id%>" method="post">
              <input type="submit" value="Delete"></td>
            </form>    
      </tr>
    <% end %>
  </tbody>
</table>
