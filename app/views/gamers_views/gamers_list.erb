<h1>Gamers Entered</h1>
<br>
<table border="1">
  <thead>
    <tr>
      <th>Gamer ID</th>
      <th colspan="3">Gamer Name</th>
      <th>Squad Name</th>
    </tr>
  </thead>

  <tbody>
    <% @gamers.each do |g| %>
    <tr>
      <td><center><%= g.id %></center></td>
      <td><a href="gamer/<%=g.id%>">
          <%= g.last_name %>, <%= g.first_name %></a></td>
      <td><form action="">
            <input type="submit" value="Edit"></td>
          </form>
      <td><form action="delete_gamer/<%=g.id%>" method="post">
            <input type="submit" value="Delete"></td>
          </form>    
      <td><a href="squad/<%=g.squad_id%>">
          <%= g.squad_access.squad_name %></a></td>
    </tr>
    <% end %>
  </tbody>
</table>
<br>
<br>
<a href="/">Home</a>