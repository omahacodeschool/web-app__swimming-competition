<center><h1><%= @activity.name %></h1>

Max Possible Score: <b><%= @activity.max_score %></b>&emsp;|&emsp;
Status: <b><%= @activity.get_activity_locked_status %></b>
<br>
<br>
<table border="0">
  <thead>
    <tr>
      <th>Competitor&emsp;&emsp;&emsp;&emsp;&emsp;</th>
      <th>&emsp;&emsp;</th>
      <th>College&emsp;</th>
      <th>&emsp;&emsp;</th>
      <th>Conference&emsp;</th>
      <th>&emsp;&emsp;</th>
      <th>Competitor Score&emsp;</th>
    </tr>
  </thead>
  <tbody>
     <% @results.each do |r| %>
      <tr>
        <td><a href="/competitors/competitor/<%= r.competitor_id %>"><%= r.get_competitor_name%>&nbsp;</a></td>
        <td>&emsp;&emsp;</td>
        <td><%= r.get_competitor_college_name %></td>
        <td>&emsp;&emsp;</td>
        <td><%= r.get_conference_name %></td>
        <td>&emsp;&emsp;</td>
        <td>&emsp;<%= r.score %></td>
      </tr>
    <% end %>
  </tbody>
</table> 
<br>
<br>
<br>
<center>
  <table border="0">
    <thead>
      <tr>

      <% if @activity.locked == false %>
        <th><form method="POST" action="/activities/activity/<%= @activity.id %>/update_activity">
        <input type="submit" value="Update Activity">&emsp;</form></th>

        <th><form method="POST" action="/activities/activity/<%= @activity.id %>/delete_activity/confirmation">
        <input type="submit" value="Delete Activity">&emsp;</form></th></form>

        <th><form method="POST" action="/activities/activity/<%= @activity.id %>/lock">
        <input type="submit" value="Lock Activity">&emsp;</form></th></form>
      <% end %>

      <% if @activity.locked == true %>
        <th><form method="GET" action="/activities/activity/<%= @activity.id %>/winners">
        <input type="submit" value="View Winners">&emsp;</form></th></form>
      <% end %>

      </tr>
      </thead>
      </table>
    <br>
    <br>
    </center>