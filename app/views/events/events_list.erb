<h1>Event List</h1>

<% @events.each do |event| %>
  <p>
    <a href = "/view_event/<%= event.id %>">
      <%= event.event %>
    </a>    
  </p>
    
  <form action = "/delete_event/<%= event.id %>" method = "post">
    <input type = "submit" value = "Delete">
  </form>
  <form action = "/edit_event/<%= event.id %>" method = "get">
    <input type = "submit" value = "Edit">
  </form>
<% end %>

<p><a href = "/">Home</a></p>