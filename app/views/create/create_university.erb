<h1>Add a University</h1>

<p>Add a University<p>

<form action="/add_university" method="post">

  <input type="text" name="input_university">

  <p>Conference ID<p>

  <input type="number" name="conference_id">

  <input type="submit">
</form>


<table border="1">
  <thead>
    <tr>
      <th>Conference ID </th>
      <th>Conference</th>
    </tr>
  </thead>

  <tbody>
    <% @conferences.each do |y| %>
      <tr>
        <td> <%= y.id %> </td>
        <td> <%= y.conference_name %> </td>
      </tr>
    <% end %>
  </tbody>
</table>

<a href="/show_universities">View all Universities</a>
<a href="/">Return Home</a>



