<center>

<h1>Results List</h1>

<table border = 1px style="width:50%">
  <tr>
    <th>Competitor</th>
    <th>Event</th>
    <th>Time(sec)</th>
    <th>Delete</th>
    <th>Edit</th>
  </tr>
  <tr>
    <% @results.each do |result| %>
      <!-- <a href = "/view_result/<%= result.id %>"> -->
      <td align="center">
        <%= result.competitor_name %>
      </td>
      <td align="center">
        <%=result.event_name %>
      </td>
      <td align="center">
        <%=result.time.to_s %>
      </td>

      <% if result.event_locked == true %>
        <td align="center">
          <font color="Red">
            LOCKED
          </font>
        </td>
        <td align="center">
          <font color="Red">
            LOCKED
          </font>  
        </td>
      <% else %>
      <td align="center">  
        <form action = "/delete_result/<%= result.id %>" method = "post">
          <input type = "submit" value = "Delete">
        </form>
      </td>
      <td align="center">
        <form action = "/edit_result/<%= result.id %>" method = "get">
          <input type = "submit" value = "Edit">
        </form>
      </td>
      <% end %>
  </tr>
    <% end %>
</table>

<p><a href = "/">Home</a></p>

</center>