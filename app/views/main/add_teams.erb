<h2>Add All That Team Info Below</h2>

<a href="/">Home</a>
<br />
<a href="/add_conferences">Back</a>
<br />

<form action="/teams_form" method="post">
  <p>
  Team Name:
  <br />
  <input type="text" name="team_name" required>
  </p>
  
  <p>
  Conference:
  <br />
    <% Conference.all.each do |conference| %>
      <input type="radio" name="select_conference" value="<%= conference.id %>" checked required> 
      <%= conference.conference_name %>
      <br />
    <% end %>
  </p>

  <p>
  <input type="submit" value="Add Team">
  </p>
</form>

<p>
Then:
<br />
  
  <% if Team.ids.any? %>
    <a href="/add_swimmers">Add Swimmers</a>
  <% else %>
    <strong style="color:red">
      Please add teams before moving forward
    </strong>
  <% end %>
  
</p>

<br />

<table border="1">
  <thead>
    <tr>
      <th colspan="4"> ADDED TEAMS </th>
    </tr>
    <tr>
      <th> Team </th>
      <th> Conference </th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.team_name %></td>
        <td><center><%= team.team_conference %></center></td>
        <td><center><a href="/delete_team/<%= team.id %>"> delete
        </a></center></td>
        <td><center><a href="/update_team/<%= team.id %>"> update
        </a></center></td>
      </tr>
    <% end %>
  </tbody>
</table>